{
  "NuixSettings": {
    "NuixUseDongle": true,
    "NuixExeConsolePath": "C:\\Program Files\\Nuix\\Nuix 8.2\\nuix_console.exe",
    "NuixVersion": "8.2",
    "NuixFeatures": [
      "ANALYSIS",
      "CASE_CREATION",
      "EXPORT_ITEMS",
      "METADATA_IMPORT",
      "OCR_PROCESSING",
      "PRODUCTION_SET"
    ]
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "fileTarget": {
        "type": "File",
        "fileName": "${basedir:fixtempdir=true}\\edr.log",
        "layout": "${date} ${level:uppercase=true} ${message} ${exception}"
      },
      "consoleInfo": {
        "type": "Console",
        "layout": "${message} ${exception}"
      },
      "consoleError": {
        "type": "Console",
        "layout": "${level:uppercase=true}: ${message} ${exception}",
        "error": true
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "fileTarget,consoleError",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "fileTarget,consoleInfo"
      }
    ]
  }
}